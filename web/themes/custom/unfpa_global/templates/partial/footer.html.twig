<!-- //Footer Starts -->
<section class="footerWrapper">
  <div class="container">
    <div class="row wrap">
      <div class="col-md-3 col-sm-3"><img src="{{ base_path ~ directory }}/images/new_logo_footer.png" alt="UNFPA" class="logo"></div>
      <div class="col-md-5 col-sm-5">
        {% if page.footer %}
          {% block footer %}            
            {{ page.footer }}            
          {% endblock %}
        {% endif %}
      </div>
      <div class="col-md-3 col-sm-3">
        <a href="#" class="btn donate"><span>{{'Donate'|t}}</span><span class="icon"><img src="{{ base_path ~ directory }}/images/icon_donate_black.svg" alt=""></span></a>
      </div>
    </div>

    <div class="row social">
      <div class="col-md-3 col-sm-6"><p>&copy; {{'All rights reserved'|t}}. 2020</p></div>
      <div class="col-md-5 col-sm-6">
        <div class="social-follow">
          <span>Follow us</span>
          <a href="#" target="_blank"><img src="{{ base_path ~ directory }}/images/icon_twiiter_white.svg" alt="Twitter"></a>
          <a href="#" target="_blank"><img src="{{ base_path ~ directory }}/images/icon_fb_white.svg" alt="Facebook"></a>
          <a href="#" target="_blank"><img src="{{ base_path ~ directory }}/images/icon_youtube_white.svg" alt="YouTube"></a>
        </div>
      </div>
      <div class="col-md-4 col-sm-6">
        <p>{{'Join our mailing list'|t}}</p>
        <div class="mailing-box">
          <input type="email" placeholder="Email address">
          <button type="submit">{{'Subscribe'|t}}</button>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- //Footer end -->